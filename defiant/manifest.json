{
	"author": "Cookie Engineer",
	"name": "Defiant",
	"version": "0.0.1",
	"description": "Stay protected from Ads, JavaScript, Cookies and other Fingerprinting Techniques",
	"icons": {
		"16":  "design/icon-16.png",
		"48":  "design/icon-48.png",
		"128": "design/icon-128.png"
	},
	"background": {
		"page": "chrome/background.html",
		"persistent": true
	},
	"browser_action": {
		"browser_style": false,
		"default_title": "Site Modes",
		"default_popup": "chrome/popup.html",
		"default_icon": "design/icon-48.png"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"all_frames": true,
			"run_at": "document_start",
			"js": [
				"content/block.mjs"
			]
		}, {
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"all_frames": true,
			"run_at": "document_end",
			"js": [
				"content/clean.mjs"
			]
		}
	],
	"permissions": [
		"cookies",
		"downloads",
		"privacy",
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	],
	"manifest_version": 2,
	"offline_enabled": true,
	"options_page": "chrome/options.html",
	"web_accessible_resources": [
		"extern/base.mjs",
		"source/parser/IP.mjs",
		"source/parser/URL.mjs"
	]
}
